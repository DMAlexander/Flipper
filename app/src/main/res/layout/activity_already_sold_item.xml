<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/itemNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="itemName"
            android:textSize="15dp"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/dateSold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/itemNameText"
            android:text="currentDate"
            android:textSize="15dp"
            android:layout_marginLeft="2dp"
            />

        <TextView
            android:id="@+id/priceSold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/dateSold"
            android:text="purPrice"
            android:textSize="15dp"
            android:layout_marginLeft="2dp"
            />

        <TextView
            android:id="@+id/priceProfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/priceSold"
            android:text="projValue"
            android:textSize="15dp"
            android:layout_marginLeft="2dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>